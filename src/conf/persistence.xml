<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="MedicineAppPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>model.OrderDetails</class>
    <class>model.CartItem</class>
    <class>model.ShoppingSession</class>
    <class>model.ProductOriginal</class>
    <class>model.OrderItems</class>
    <class>model.ProductCategory</class>
    <class>model.Users</class>
    <class>model.UserAddress</class>
    <class>model.ProductPackaging</class>
    <class>model.ProductDiscount</class>
    <class>model.Products</class>
    <class>model.UserPayment</class>
    <class>model.PaymentDetails</class>
    <class>model.ProductInventory</class>
    <class>model.ProductImages</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=SMARTCARE_PROJECT;encrypt=true;trustServerCertificate=true;"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="javax.persistence.jdbc.password" value="123"/>
      <property name="hibernate.hbm2ddl.auto" value="update" />
    </properties>
  </persistence-unit>
</persistence>
